<!DOCTYPE html>
<html>
<head>
  <title>Rails App Demo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Rails App Demo", root_path, :class => 'navbar-brand' %>
    </div>

    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav">
        <li class='dropdown'>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class='fa fa-search'></i>
            <%= t 'layouts.header.functions' %>
            <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <li>
              <%= link_to companies_path do %>
                  <i class='fa fa-building-o'></i>
                  <%= t 'layouts.header.companies' %>
              <% end %>
            </li>
            <li>
              <%= link_to best_sellers_path do %>
                  <i class='fa fa-book'></i>
                  <%= t 'layouts.header.best_sellers' %>
              <% end %>
            </li>
          </ul>

        </li>
      </ul>

      <ul class="nav navbar-nav pull-right">
        <li class='flags-container'>
          <%= link_to url_for(:locale => "fi") do %><%= image_tag 'blank.gif', :class => 'flag flag-fi', :alt => 'Suomi' %><% end %>
          <%= link_to url_for(:locale => "sv") do %><%= image_tag 'blank.gif', :class => 'flag flag-sv', :alt => 'Svenska' %><% end %>
          <%= link_to url_for(:locale => "en") do %><%= image_tag 'blank.gif', :class => 'flag flag-en', :alt => 'English' %><% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="container main_content">
  <%= yield %>
</div>

<!-- This is needed for I18n -->
<span id="current-language" class="stashed"><%= I18n.locale.to_s %></span>

</body>
</html>
